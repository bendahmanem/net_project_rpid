@model OrdonnanceEditViewModel
<br>
<h1 class="text-center ">Éditer Ordonnance</h1>
<br>
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="OrdonnanceId" />

    <div class="form-group">
        <label asp-for="Posologie" class="control-label">Posologie</label>
        <input asp-for="Posologie" class="form-control" />
        <span asp-validation-for="Posologie" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date_debut" class="control-label">Date de début</label>
        <input asp-for="Date_debut" class="form-control" type="date" />
        <span asp-validation-for="Date_debut" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date_fin" class="control-label">Date de fin</label>
        <input asp-for="Date_fin" class="form-control" type="date" />
        <span asp-validation-for="Date_fin" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Instructions_specifique" class="control-label">Instructions spécifiques</label>
        <input asp-for="Instructions_specifique" class="form-control" />
        <span asp-validation-for="Instructions_specifique" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PatientId">Patient</label>
        <select asp-for="PatientId" class="form-control">
            <option value="">Sélectionné le patient</option>
            @foreach (var pat in Model.Patients)
            {
                <option value="@pat.PatientId">@pat.Nom_p</option>
            }
        </select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>
    <br> <br>
    <h2 class="text-center ">Medicaments</h2>
    <div class="form-group">
        @foreach (var medicament in Model.Medicaments)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedMedicamentId" value="@medicament.MedicamentId"
                @(Model.SelectedMedicamentId != null && Model.SelectedMedicamentId.Contains(medicament.MedicamentId) ?
                    "checked" : "") />
                <label class="form-check-label">@medicament.Libelle_med</label>
            </div>
        }
    </div>
    <br> <br>
    <input type="submit" value="Enregistrer" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>

</form>