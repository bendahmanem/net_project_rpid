@model List<ASPBookProject.Models.Ordonnance>
<br>
<h1 class="text-center ">Liste des Ordonnances</h1>
<br>
@if (Model.Count() > 0)
{
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Médecin</th>
                    <th>Date début</th>
                    <th>Date fin</th>
                    <th>Posologie</th>
                    <th>Patient Nom</th>
                    <th>Patient prénom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ordonnance in Model)
                {
                    <tr>
                        <td>Dr @Html.DisplayFor(o => ordonnance.Medecin.UserName)</td>
                        <td>@Html.DisplayFor(o => ordonnance.Date_debut)</td>
                        <td>@Html.DisplayFor(o => ordonnance.Date_fin)</td>
                        <td>@Html.DisplayFor(o => ordonnance.Posologie)</td>
                        <td>@Html.DisplayFor(o => ordonnance.Patient.Nom_p)</td>
                        <td>@Html.DisplayFor(o => ordonnance.Patient.Prenom_p)</td>
                        <td><a asp-action="Edit" asp-route-id="@ordonnance.OrdonnanceId" class="btn btn-warning">Modifier</a>
                            <a asp-action="ShowDetails" asp-route-id="@ordonnance.OrdonnanceId" class="btn btn-info">Détails</a>
                            <a asp-action="ExportPdf" asp-route-id="@ordonnance.OrdonnanceId"
                                class="btn btn-success">Télécharger en PDF</a>
                            <a asp-action="Delete" asp-route-id="@ordonnance.OrdonnanceId" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <br> <br>
    <a asp-action="Add" id="accueil" class="btn btn-primary">Ajouter une nouvelle ordonnance</a>
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Retour</a>
}
else
{
    <p>Il n'y a pas d'ordonnance</p>
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Retour</a>
    <a asp-controller="Ordonnance" asp-action="Add" asp-route-Id="@ViewBag.PatientId" class="btn btn-primary">Créer une
        nouvelle ordonnance</a>
}