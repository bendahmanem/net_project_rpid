<!DOCTYPE html>
<html lang="fr" data-bs-theme="light">

<head>
    <link rel="stylesheet" href="~/CSS/style.css" asp-append-version="true" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Med Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/CSS/style.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg bg-white">
            <div class="container">
                <a class="brand-text ps-2" asp-action="Index" asp-controller="Dashboard">
                    Med Manager
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <div class="search-container mx-auto">
                        <input type="text" id="search" class="form-control"
                            placeholder="Rechercher un médicament/patient/allergie/antécédent par nom..."
                            aria-label="Recherche patient">
                    </div>

                    <div class="dropdown ms-3">
                        <button class="profile-dropdown btn" type="button" data-bs-toggle="dropdown">
                            <img src="~/images/IconProfile.png" width="45" height="45" class="rounded-circle"
                                alt="Profile" />
                        </button>
                        <div class="dropdown-menu dropdown-menu-end">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="text-center mb-3">
                                    <p class="fw-bold mb-0">Dr. @User.Identity.Name</p>
                                </div>
                                <a asp-action="Edit" asp-controller="Account" class="d-block mb-2">
                                    <button class="btn btn-primary">
                                        <i class="bi bi-pencil-square me-2"></i>Modifier profil
                                    </button>
                                </a>
                                <a asp-action="Logout" asp-controller="Account" class="d-block">
                                    <button class="btn btn-outline-danger">
                                        <i class="bi bi-box-arrow-right me-2"></i>Déconnexion
                                    </button>
                                </a>
                            }
                            else
                            {
                                <p class="text-center mb-3">Vous êtes déconnecté</p>
                                <a asp-action="Login" asp-controller="Account" class="d-block">
                                    <button class="btn btn-primary">
                                        <i class="bi bi-box-arrow-in-right me-2"></i>Connexion
                                    </button>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="container flex-grow-1 py-4">
        @RenderBody()
    </main>
    <footer class="bg-white">
        <div class="container">
            <div class="text-center">
                <div class="d-flex justify-content-center gap-4 mb-2">
                    <a asp-action="Contact" asp-controller="Dashboard">Nous contacter</a>
                    <a asp-action="FAQ" asp-controller="Dashboard">FAQ</a>
                    <a href="~/PDFGuide/Guide d'utilisation MedManager.pdf" download="Guide d'utilisation MedManager.pdf">
                        Guide d'utilisation</a>
                </div>
                <p class="text-muted mb-0">&copy; 2024 Med Manager. Tous droits réservés.</p>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/JS/index.js"></script>
</body>

</html>