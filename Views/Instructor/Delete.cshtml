@model Instructor

<h1>Are you sure you want to delete this instructor?</ h1>
    <form asp-action="DeleteConfirmed" method="post">
        <input asp-for="InstructorId" type="hidden" />
        <div class="form-group">
            <label asp-for="FirstName"></label> <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label> <input asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Rank"></label> <input asp-for="Rank" class="form-control" />
        </div>
        <input type="submit" value="Delete, Yes!" class="btn btn-danger" />
        <input type="button" onclick="history.back()" value="Naaah, don't" class="btn btn-secondary" />
    </form>
