@{
    Layout = null;
}
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="fr">

<head>
    <link rel="stylesheet" href="~/CSS/style.css" asp-append-version="true" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Med Manager - Inscription</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/CSS/style.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg bg-white shadow-sm">
            <div class="container">
                <a class="brand-text ps-2">Med Manager</a>
            </div>
        </nav>
    </header>
    <main class="container flex-grow-1">
        <div class="register-container">
            <h1 class="text-center mb-4">Créer un compte</h1>
            <form asp-action="Register" asp-controller="Account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="UserName" class="form-label">Nom</label>
                        <input asp-for="UserName" class="form-control" placeholder="Votre nom" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Login_m" class="form-label">Prénom</label>
                        <input asp-for="Login_m" class="form-control" placeholder="Votre prénom" />
                        <span asp-validation-for="Login_m" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Role" class="form-label">Rôle</label>
                        <select asp-for="Role" class="form-control">
                            <option value="">Sélectionnez un rôle</option>
                            <option value="Généraliste">Généraliste</option>
                            <option value="Pediatre">Pediatre</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Date" class="form-label">Date de naissance</label>
                        <input asp-for="Date" class="form-control" type="date" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="form-label">Mot de passe</label>
                    <input asp-for="Password" class="form-control" type="password"
                        placeholder="Choisissez un mot de passe sécurisé" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2 justify-content-end mt-4">
                    <a asp-action="Login" class="btn btn-outline-secondary">Annuler</a>
                    <button type="submit" class="btn btn-primary">Créer le compte</button>
                </div>
            </form>
        </div>
    </main>

    <footer class="bg-white">
        <div class="container">
            <div class="text-center">
                <div class="d-flex justify-content-center gap-4 mb-2">
                    <a asp-action="ContactNonConnecter" asp-controller="Account">Nous contacter</a>
                    <a href="~/PDFGuide/Guide d'utilisation MedManager.pdf"
                        download="Guide d'utilisation MedManager.pdf">
                        Guide d'utilisation</a>
                </div>
                <p class="text-muted mb-0">&copy; 2024 Med Manager. Tous droits réservés.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>