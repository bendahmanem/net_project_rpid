@model MailViewModel
@{
    Layout = null;
    ViewData["Title"] = "Contactez le support";
}
<!DOCTYPE html>
<html lang="fr">

<head>
    <link rel="stylesheet" href="~/CSS/style.css" asp-append-version="true" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Med Manager - Contact</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/CSS/style.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg bg-white shadow-sm">
            <div class="container">
                <a class="brand-text ps-2">Med Manager</a>
            </div>
        </nav>
    </header>
    <main class="container flex-grow-1">
        <div class="contact-container">
            <h2 class="text-center mb-4">Contactez le support</h2>
            <form asp-action="ContactNonConnecter" asp-controller="Account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Nom" class="form-label">Nom</label>
                            <input asp-for="Nom" class="form-control" placeholder="Votre nom" />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Prenom" class="form-label">Prénom</label>
                            <input asp-for="Prenom" class="form-control" placeholder="Votre prénom" />
                            <span asp-validation-for="Prenom" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="email" class="form-label">Email</label>
                            <input asp-for="email" class="form-control" placeholder="votre@email.com" />
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="telephone" class="form-label">Téléphone</label>
                            <input asp-for="telephone" class="form-control" placeholder="Votre numéro" />
                            <span asp-validation-for="telephone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="message" class="form-label">Message</label>
                    <textarea asp-for="message" class="form-control"
                        placeholder="Écrivez votre message ici..."></textarea>
                    <span asp-validation-for="message" class="text-danger"></span>
                </div>
                <div class="d-flex gap-2 justify-content-end">
                    <a asp-action="Login" asp-controller="Account" class="btn btn-outline-secondary">Annuler</a>
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                </div>
            </form>
        </div>
    </main>
    <footer class="bg-white">
        <div class="container">
            <div class="text-center">
                <div class="d-flex justify-content-center gap-4 mb-2">
                    <a href="~/PDFGuide/Guide d'utilisation MedManager.pdf"
                        download="Guide d'utilisation MedManager.pdf">
                        Guide d'utilisation</a>
                </div>
                <p class="text-muted mb-0">&copy; 2024 Med Manager. Tous droits réservés.</p>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>