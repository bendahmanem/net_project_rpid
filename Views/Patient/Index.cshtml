@model IEnumerable<Patient>
<br>
<h1 class="text-center">Liste Patients</h1><br><br>




@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Sexe</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var Patient in Model)
            {
                <tr>
                    <TD>@Html.DisplayFor(m => Patient.Nom_p)</TD>
                    <td>@Html.DisplayFor(m => Patient.Prenom_p)</td>
                    <td>@Html.DisplayFor(m => Patient.Sexe_p)</td>
                    <td><a asp-action="Edit" asp-route-id="@Patient.PatientId" class="btn btn-warning">Modifier</a>
                        <a asp-action="ShowDetails" asp-route-id="@Patient.PatientId" class="btn btn-info">Détails</a>
                        <a asp-action="Delete" asp-route-id="@Patient.PatientId" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Il n'y a pas de patient</p>
}
<br>
<a asp-action="Index" asp-controller="Dashboard" class="btn btn-secondary">Retour</a>
<a asp-action="Add" class="btn btn-primary">Ajouter</a>
