@using System.Collections
@model IEnumerable<Allergie>
<br><br>
<h1 class="text-center ">Liste des Allergies</h1>
<br>
@if (Model.Count() > 0)
{
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nom de l'allergie</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var allergie in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => allergie.Libelle_al)</td>
                        <td><a asp-action="Edit" asp-route-id="@allergie.AllergieId" class="btn btn-warning">Modifier</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <br>

    <br>
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Retour</a>
    <a asp-action="Add" id="accueil" class="btn btn-primary">Ajouter une nouvelle allergie</a>

    <br>

}
else
{
    <p>Il n'y a pas d'allergie</p>
    <br>
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Retour</a>
    <a asp-action="Add" id="accueil" class="btn btn-primary">Ajouter une nouvelle allergie</a>
    <br>
}