@model MedicamentEditViewModel

<h2 class="text-center">Éditer Médicament</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Medicament.MedicamentId" />

    <div class="form-group">
        <label asp-for="Medicament.Libelle_med" class="control-label">Nom du médicament</label>
        <input asp-for="Medicament.Libelle_med" class="form-control" />
        <span asp-validation-for="Medicament.Libelle_med" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Medicament.Contr_indication" class="control-label">Contre indication</label>
        <input asp-for="Medicament.Contr_indication" class="form-control" />
        <span asp-validation-for="Medicament.Contr_indication" class="text-danger"></span>
    </div>
<br><br>
    <h4 class="text-center">Incomptabilité Allergies</h4>
    <div class="form-group">
        @foreach (var allergie in Model.Allergies)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedAllergieIds" value="@allergie.AllergieId"
                @(Model.SelectedAllergieIds != null && Model.SelectedAllergieIds.Contains(allergie.AllergieId) ? "checked" :
                    "") />
                <label class="form-check-label">@allergie.Libelle_al</label>
            </div>
        }
    </div>
<br><br>
    <h4 class="text-center">Incomptabilité Antécédents</h4>
    <div class="form-group">
        @foreach (var antecedent in Model.Antecedents )
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedAntecedentIds" value="@antecedent.AntecedentId"
                @(Model.SelectedAntecedentIds != null && Model.SelectedAntecedentIds.Contains(antecedent.AntecedentId) ?
                    "checked" : "") />
                <label class="form-check-label">@antecedent.Libelle_a</label>
            </div>
        }
    </div>
<br><br>
    <input type="submit" value="Enregistrer" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
</form>

